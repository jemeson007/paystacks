<div class = 'row'>
	<div class = 'col-xs-6 col-xs-offset-3'>
		<h2>Supplier</h2>
		<div class="supple">
			<%=form_with model: @finance, local: true, html: {multipart: true} do |f| %>

				<% if @finance.errors.any? %>
				<div id="alert alert-danger">
				  <h2>
				    <%= pluralize(@finance.errors.count, "error") %> prohibited this article from being saved.
				  </h2>
				  <ul>
				     <% @finance.errors.full_messages.each do |msg| %>
				       <li><%= msg %></li>
				       <%  end %>
				  </ul>
			    </div>
				<% end %>

			<p>
				<div class="form-group">
				<%= f.label :Supplier_Name, class: "control-label" %>
				<%= f.text_field :supplierName, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
				<%= f.label :email, class: "control-label" %>
				<%= f.text_field :email, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
				<%= f.label :Ingredient, class: "control-label" %>
				<%= f.text_field :Ingredient, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
					<%= f.label :Bank_Name, class: "control-label" %>
					<%= f.text_field :BankName, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
				<%= f.label :Account_Number, class: "control-label" %>
				<%= f.number_field :accountNumber, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
					<%= f.label :Currency, class: "control-label" %>
					<%= f.radio_button :currency, :₦, class: "form-control" %>
					<%= f.label :currency_NGN, "₦", class: "control-label" %>
					<%= f.radio_button :currency, :USD, class: "form-control" %>
					<%= f.label :currency_USD, "$", class: "control-label" %>
					<%= f.radio_button :currency, :£, class: "form-control" %>
					<%= f.label :currency_GBP, "£", class: "control-label" %>
					<%= f.radio_button :currency, :€, class: "form-control" %>
					<%= f.label :currency_EURO, "€", class: "control-label" %>

				</div>
			</p>


			<p>
				<div class="form-group">
				<%= f.label :amount, class: "control-label" %>
				<%= f.number_field :amount, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
					<%= f.label :Supplier_Cell_Phone_Number, class: "control-label" %>
					<%= f.number_field :supplierNumber, class: "form-control" %>
				</div>
			</p>

			<p>
				<div class="form-group">
					<%= f.submit "Place", class: "btn btn-primary" %>	
				</div>
			</p>
				
			<% end %>
		</div>

	</div>
</div>